<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="ProjetFinDeSession2024.Page_InscriptionSeance"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProjetFinDeSession2024"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local1="using:ProjetFinDeSession2024"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <!-- // Samuel Vinette / Créer le 2024-11-28 15:53 / Dernière modification: 2024-11-28 15:53 -->

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="12*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <StackPanel x:Name="stk_connecter" Grid.Row="0" Grid.Column="0" Margin="10" Orientation="Horizontal" Visibility="Collapsed">
            <Button x:Name="bt_ajouter" Content="Ajouter une séance pour l'activité sélectionnée" Background="#90EE90" />
            <Button x:Name="bt_supprimer" Content="Supprimer la séance sélectionnée" Background="#FF5C5C" Margin="10,0,0,0" />
            <TextBlock x:Name="txtblock_erreur" Text="Il y a eu une erreur de suppression" Foreground="#FF5C5C" Visibility="Collapsed"/>
            <TextBlock x:Name="txtblock_reussi" Text="Suppression réussi" Foreground="#90EE90" Visibility="Collapsed"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" Grid.Column="0">
            <GridView x:Name="lv_list" ItemsSource="{x:Bind liste}">
                <GridView.ItemTemplate>
                    <DataTemplate x:DataType="local:Seance">
                        <StackPanel MinHeight="50" MinWidth="250" Background="LightGray" Margin="10,10,0,0" CornerRadius="10" Width="300" Height="170">
                            <TextBlock HorizontalAlignment="Center" 
                                           FontSize="20" 
                                           TextWrapping="Wrap" 
                                           Margin="5" 
                                           Height="25"
                                           Text="{x:Bind Date , Mode=OneWay}"/>
                            <TextBlock HorizontalAlignment="Center" 
                                           FontSize="15" 
                                           TextWrapping="Wrap" 
                                           Margin="2" 
                                           Height="30"
                                           Text="{x:Bind Heure, Mode=OneWay}"/>

                            <!-- Inscription et supprimer -->
                            <StackPanel Height="30" Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button x:Name="bt_inscription" Width="90" Content="S'inscrire"/>
                                <!--<Button x:Name="bt_supprimer" Width="40" Content="X" Background="Red" Visibility="Collapsed"/>-->
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
        </ScrollViewer>
    </Grid>
</Page>
