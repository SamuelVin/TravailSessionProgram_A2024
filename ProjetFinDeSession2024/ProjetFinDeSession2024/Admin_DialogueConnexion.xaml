<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="ProjetFinDeSession2024.Admin_DialogueConnexion"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProjetFinDeSession2024"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
	Closing="ContentDialog_Closing"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox x:Name="txtbox_utilisateur" Header="Numéro d’identification" PlaceholderText="Utilisateur"/>
            <TextBlock x:Name="tbl_UtilisateurErreur" TextWrapping="Wrap" Width="248" HorizontalAlignment="Center" Foreground="Red" Margin="0 12 0 0"/>
            <PasswordBox x:Name="txtbox_motdepasse" Header="Mot de passe" />
            <TextBlock x:Name="tbl_MotdepasseErreur" TextWrapping="Wrap" Width="248" HorizontalAlignment="Center" Foreground="Red" Margin="0 12 0 0"/>
        </StackPanel>
    </Grid>
</ContentDialog>
